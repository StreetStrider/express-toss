    "jsnext/"
  ],

  "scripts":
  {
    "st":
      "eslint --ext .ts .",

    "st1":
      "eslint --ext .js,.ts .",

    "t":
      "tsc",

    "unit":
      "gulp --once && mocha --exit --recursive release/dev/test/case",

    "cover":
      "nyc --reporter=lcov --reporter=text-summary npm run unit",

    "test":
      "npm run st && npm run t && npm run unit",

    "coveralls":
      "cat coverage/lcov.info | coveralls",

    "npm":
      "gulp --final"
  },


  "peerDependencies":
