    "@typescript-eslint/parser":
      "*",

    "@typescript-eslint/eslint-plugin":
      "*",


    "mocha":
      "6",

    "chai":
      "4",

    "typescript":
      "3.5",

    "randomstring":
      "1",

    "console-ultimate":
      "3",

    "gulp":
      "4",

    "rollup":
      "1",

    "metalpipe":
      "~/Projects/metalpipe",

    "express":
      "^4.5",

